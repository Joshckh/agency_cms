<h1>Clients List</h1>
<ul>
  <% clients.forEach(client => { %>
  <li>
    <%= client.name %> - <%= client.email %>
    <button><a href="/client/<%= client.id %>/edit">Edit</a></button>
    <form
      action="/client/<%= client.id %>/delete"
      method="POST"
      onsubmit="return confirmDelete(event)"
    >
      <button type="submit">🗑️ Delete</button>
    </form>
  </li>
  <% }) %>
</ul>
